<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="../index.html"><h1>rBlog<small>/manager</small></h1></a>
  </div>
  <div id="navbar" class="collapse navbar-collapse">
    <ul class="nav navbar-nav">
      <li class=<%= 'active' if params[:controller]=='admin/posts' %> > <%= link_to 'Posts', admin_posts_path %></li>
      <li class=<%= 'active' if params[:controller]=='admin/categories' %> > <%= link_to 'Categories', admin_categories_path %></li>
      <li class=<%= 'active' if params[:controller]=='admin/users' %> > <%= link_to 'Users', admin_users_path %></li>
    </ul>

    <%= form_tag @spath, method: :get, id: 'search-form', class: 'search-form navbar-form navbar-right' do %>
      <div class="form-group">
        <%= text_field_tag :search, nil, placeholder: 'Search', class: 'form-control' %>
      </div>
      <%= submit_tag :search, class: 'btn btn-primary' %>
    <% end %>

  </div><!--/.nav-collapse -->
</div>