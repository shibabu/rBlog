<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to content_tag(:h1, 'rBlog'), root_path, class: 'navbar-brand' %>
  </div>
  <div id="navbar" class="collapse navbar-collapse">
    <ul class="nav navbar-nav">
      <li class="<%= 'active' if params[:controller]=='posts' %>"><%= link_to 'Home', root_path %></li>
      <li class="<%= 'active' if params[:controller]=='about' %>"><%= link_to 'About', about_path %></li>
      <li class="<%= 'active' if params[:controller]=='contacts' %>"><%= link_to 'Contact', contact_path %></li>
    </ul>

    <%= form_tag posts_path, method: :get, id: 'search-form', class: 'search-form navbar-form navbar-right' do %>
      <div class="form-group">
        <%= text_field_tag :search, nil, placeholder: 'Search', class: 'form-control' %>
      </div>
      <%= submit_tag :search, class: 'btn btn-primary' %>
    <% end %>

  </div><!--/.nav-collapse -->
</div>