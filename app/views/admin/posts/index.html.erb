<h2 class="page-header">Manage Posts <%= link_to 'Add New', new_admin_post_path, class: 'btn btn-primary' %> </h2>
<% if @posts.any? %>
  <table class="table table-striped">
    <tr>
      <th>Post Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Date Created</th>
      <th>Actions</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user.name %></td>
      <td><%= post.category.name %></td>
      <td><%= post.created_at.to_time.strftime '%B %e at %l:%M %p' %></td>
      <td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-primary' %>
                                          <%= link_to 'Delete', admin_post_path(post), method: :delete,
                                                      data: {confirm: 'Are You Sure?'}, class: 'btn btn-danger' %> </td>
    </tr>
    <% end %>
  </table>
<% else %>
  <p>The are no posts yet..</p>
<% end %>